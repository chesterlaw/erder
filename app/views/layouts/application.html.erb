<!DOCTYPE html>
<html>
<head>
  <title>Erder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='title-bar'>
  <button class='preview-button'>Preview</button>
</div>

<% if action_name != 'index' %>
  <div class='buttons'>
    <a href='<%= @previousPage %>' class='previous-button'>Prev</a>
    <a href='<%= @nextPage %>' class='next-button'>Next</a>
  </div>
<% end %>

<%= yield %>

</body>
</html>
